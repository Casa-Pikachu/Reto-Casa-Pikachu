@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <div class="row">
                @* Podio *@
                <div class="col-6">
                    <div class="card text-center">
                        <h5 class="card-header">Top 3</h5>
                        <div class="card-body">
                            @* Se puede hacer una tabla como en la demostracion en clase *@
                            @* Query para obtener los primeros 3 lugares *@

                            @foreach (var item in Model.top3)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <img src="" alt="Usuario" class="img-fluid" style="width: 50px;">
                                    <p><strong>@item.nombre</strong></p>
                                    <p>@item.experiencia</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                @* Monedas *@
                <div class="col-6">
                    <div class="card text-center">
                        <h5 class="card-header">Mis monedas</h5>
                        <div class="card-body">
                            <img src="" alt="Moneda" class="img-fluid" style="width: 50px;">
                            
                            @* SELECT monedas FROM usuarios WHERE id_usuario = *id del usuario actual* *@
                            <h3>
                                @Model.user.monedas
                            </h3>
                        </div>
                    </div>
                </div>
            </div>

            @* Tienda *@
            <div class="row mt-4">
                <div class="col">
                    <div class="card text-center">
                        <h5 class="card-header">Tienda</h5>
                        <div class="card-body d-flex justify-content-around">
                            @foreach (var item in Model.recompensas){
                                <div>
                                    <img src="" alt="Item" class="img-fluid" style="width: 60px;">
                                    <p class="mt-2">$@item.precio_recompensa</p>
                                </div>          
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            @* Anuncios *@
            <div>
                <div class="card text-center">
                    <h5 class="card-header">Anuncios</h5>
                    <div class="card-body">
                        <p><strong>Mauricio</strong></p>
                        <p>Asesor de tienda</p>
                        @* Tabla en la BD para anuncios? *@
                        @* <p>Hola, Andrés. ¡Felicidades por llegar al puesto #1 en el podio!</p> *@
                        
                        <div class="scrollable-div">
                            @foreach (var item in Model.anuncios)
                            {   
                                    <p>@item.contenido</p>
                            }

                            @foreach (var item in Model.anuncios)
                            {   
                                    <p>@item.contenido</p>
                            }

                            @foreach (var item in Model.anuncios)
                            {   
                                    <p>@item.contenido</p>
                            }

                            @foreach (var item in Model.anuncios)
                            {   
                                    <p>@item.contenido</p>
                            }

                            @foreach (var item in Model.anuncios)
                            {   
                                    <p>@item.contenido</p>
                            }
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
